extends layout.pug

block content
    .home-page
    h1 Add student Form
    form.add-student-form(action="/students/add", method="POST")
        label(for="name") Name
        input(type="text", id="name", name="name", required)
        br
        label(for="birth") Birthdate
        input(type="date", id="birth", name="birth", required)
        br
        button(type="submit") Add student